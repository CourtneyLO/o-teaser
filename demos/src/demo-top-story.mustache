<div class="demo-container demo-container--large demo-container--top-story">

	<div class="o-teaser o-teaser--top-story {{#article-modifier}}o-teaser--{{article-modifier}}{{/article-modifier}} {{#article-image-url}}o-teaser--has-image{{/article-image-url}}" data-o-component="o-teaser">
		<div class="o-teaser__content">
			<a href="#" class="o-teaser__tag">{{article-tag}}</a>

			<h2 class="o-teaser__heading"><a href="#">{{article-heading}}</a></h2>

			{{#article-standfirst}}
				<p class="o-teaser__standfirst">{{article-standfirst}}</p>
			{{/article-standfirst}}

			{{#article-timestamp}}
				<time data-o-component="o-date" class="o-date o-teaser__timestamp" datetime="{{article-timestamp}}">{{article-timestamp}}</time>
			{{/article-timestamp}}
		</div>

		{{#article-image-url}}
			<div class="o-teaser__image-container">
				<div class="o-teaser__image-placeholder image-placeholder">
					<img src="{{article-image-url}}" class="o-teaser__image" alt="demo image"/>
				</div>
			</div>
		{{/article-image-url}}

		{{#article-related-links.length}}
			<ul class="o-teaser__related">
				{{#article-related-links}}
					<li class="o-teaser__related-item"><a href="#">{{article-link}}</a></li>
				{{/article-related-links}}
			</ul>
		{{/article-related-links.length}}
	</div>

</div>
